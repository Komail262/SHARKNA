@model SHARKNA.ViewModels.EventViewModel

@{
    ViewData["Title"] = "My Event Details";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl" data-theme="light">
<head>
    <style>
        .info-box {
            border: 1px solid #ccc; 
            padding: 15px; 
            border-radius: 8px; 
            background-color: #f9f9f9; 
            margin-bottom: 20px; 
        }

        .info-item {
            margin-bottom: 15px; 
            padding-right: 10px; 
        }

            .info-item strong, .info-item span {
                display: inline; 
            }

        .block-body {
            margin-top: 20px; 
        }

        h5 {
            margin-bottom: 20px;
            margin-top: 30px; 
        }
    </style>
</head>
<body>
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <h5>تفاصيل صاحب الطلب</h5>

                <!-- Student Owner Details Box -->
                <div class="info-box">
                    <div class="info-item">
                        <strong>الاسم:</strong>
                        <span>@User.FindFirst(ClaimTypes.GivenName)?.Value</span>
                    </div>
                    <div class="info-item">
                        <strong>البريد الالكتروني:</strong>
                        <span>@User.FindFirst(ClaimTypes.Email)?.Value</span>
                    </div>
                    <div class="info-item">
                        <strong>رقم الجوال:</strong>
                        <span>@User.FindFirst(ClaimTypes.MobilePhone)?.Value</span>
                    </div>
                </div>

                <!-- Event Details Box -->
                <div class="block-body py-5">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="m-0">تفاصيل الفعالية</h5>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@Model.EventTitleAr</h5>
                            <p class="card-text">
                                <strong>تاريخ البداية:</strong>
                                @Model.EventStartDate?.ToString("dd-MM-yyyy")
                            </p>
                            <p class="card-text">
                                <strong>تاريخ النهاية:</strong>
                                @Model.EventEndtDate?.ToString("dd-MM-yyyy")
                            </p>
                            <p class="card-text">
                                <strong>الوقت:</strong>
                                @Model.EventStartDate?.ToString(@"hh\:mm")
                            </p>
                            <p class="card-text">
                                <strong>الموقع:</strong>
                                @Model.LocationAr
                            </p>
                            <p class="card-text">
                                <strong>المتحدث:</strong>
                                @Model.SpeakersAr
                            </p>
                            <p class="card-text">
                                <strong>الموضوع:</strong>
                                @Model.TopicAr
                            </p>
                            <p class="card-text">
                                <strong>الوصف:</strong>
                                @Model.DescriptionAr
                            </p>
                        </div>
                    </div>
                </div>

                <a href="@Url.Action("MyEventRegistrations", "EventRegistrations")" class="btn btn-secondary mt-3">العودة</a>
            </div>
        </div>
    </section>
</body>
</html>
