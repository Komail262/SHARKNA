@model SHARKNA.ViewModels.EventViewModel

@{
    ViewData["Title"] = "My Event Details";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl" data-theme="light">
<head>
    <style>
        .info-box-container {
            text-align: right;
            margin-right: 50px; /* Moved slightly to the left */
            margin-top: 20px; /* Moved down a bit */
        }

        .info-box {
            padding: 15px;
            background-color: #ffffff; /* White background */
            margin-bottom: 20px;
            text-align: right;
            border: none; /* Remove the borders */
        }

        .requester-info {
            margin-right: 40px; /* Move to the left */
            margin-top: 30px; /* Move down */
        }

        .page_content {
            background-color: #ffffff; /* Ensures the content area has a white background */
            padding: 20px; /* Adds padding to the content for better spacing */
        }
    </style>
</head>
<body>
    <section class="">
        <div class="page_content">
            <div class="block mb-4">
                <h5>    صاحب الطلب</h5>

                <!-- Student Owner Details Box -->
                <div class="info-box">
                    <div class="info-item">
                        <strong>الاسم:</strong>
                        <span>@User.FindFirst(ClaimTypes.GivenName)?.Value</span>
                    </div>
                    <div class="info-item">
                        <strong>البريد الالكتروني:</strong>
                        <span>@User.FindFirst(ClaimTypes.Email)?.Value</span>
                    </div>
                    <div class="info-item">
                        <strong>رقم الجوال:</strong>
                        <span>@User.FindFirst(ClaimTypes.MobilePhone)?.Value</span>
                    </div>
                </div>

                <!-- Event Details Box -->
                <div class="block-body py-5">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="m-0">تفاصيل الفعالية</h5>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@Model.EventTitleAr</h5>
                            <p class="card-text">
                                <strong>تاريخ البداية:</strong>
                                @Model.EventStartDate?.ToString("dd-MM-yyyy")
                            </p>
                            <p class="card-text">
                                <strong>تاريخ النهاية:</strong>
                                @Model.EventEndtDate?.ToString("dd-MM-yyyy")
                            </p>
                            <p class="card-text">
                                <strong>الوقت:</strong>
                                @Model.EventStartDate?.ToString("hh:mm")
                                @(Model.EventStartDate?.ToString("tt") == "AM" ? "صباح" : "مساء")
                            </p>
                            <p class="card-text">
                                <strong>الموقع:</strong>
                                @Model.LocationAr
                            </p>
                            <p class="card-text">
                                <strong>المتحدث:</strong>
                                @Model.SpeakersAr
                            </p>
                            <p class="card-text">
                                <strong>الموضوع:</strong>
                                @Model.TopicAr
                            </p>
                            <p class="card-text">
                                <strong>الوصف:</strong>
                                @Model.DescriptionAr
                            </p>
                        </div>
                    </div>
                </div>

                <a href="@Url.Action("MyEventRegistrations", "EventRegistrations")" class="btn btn-secondary mt-3">العودة</a>
            </div>
        </div>
    </section>
</body>
</html>
