@model IEnumerable<PermissionsViewModel>

@{
    ViewData["Title"] = "Permission List";
}

<script>
    @{
        if (@ViewData["Successful"] != null)
        {
            <Text>
                                    var result = '@Html.Raw(ViewData["Successful"])';
            Swal.fire(result, '', 'success')
                .then(
                    function () {
                        window.location.href = '@Url.Action("Index", "Permissions")';
                    }
                );
            </Text>
        }
        else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] == null)
        {
            <Text>
                                    var result = '@Html.Raw(ViewData["Falied"])';
            Swal.fire(result, '', 'error');
            </Text>
        }
        else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] != null)
        {
            <Text>
                                    var result = '@Html.Raw(ViewData["Falied"])';
            Swal.fire(result, '', 'error');
            </Text>
        }
    }
</script>


<!DOCTYPE html>
<html lang="en" dir="rtl" data-theme="light">
<body>
    <!-- Start Page Wrap -->
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <div class="block-header border-bottom px-4 py-3">
                    <h5 class="m-0">ادارة المستخدمين</h5>
                    <div class="d-flex gap-2">
                        <div class="form-group">
                            <input type="text" class="form-control table__quick_search" placeholder="البحث السريع ...">
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">إضافة مستخدم</a>
                        </div>
                    </div>
                </div>
                <div class="block-body">
                    <table class="table table-hover js-dataTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.UserName)</th>
                                <th>@Html.DisplayNameFor(m => m.FullNameAr)</th>
                                <th>@Html.DisplayNameFor(m => m.FullNameEn)</th>
                                <th>@Html.DisplayNameFor(m => m.IsDeleted)</th>
                                <th>@Html.DisplayNameFor(m => m.RoleId)</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Permission in Model)
                            {
                                <tr>
                                    <td>@Permission.UserName</td>
                                    <td>@Permission.FullNameAr</td>
                                    <td>@Permission.FullNameEn</td>
                                    <td>@Permission.IsDeleted</td>
                                    <td>@Permission.RoleName</td>
                                    <td class="action_td text-end">
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@Permission.Id" class="btn btn-sm btn-success">تعديل</a>
                                            <a asp-action="Delete" asp-route-id="@Permission.Id" class="btn btn-sm btn-success">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section><!-- End Page Wrap -->
    <!-- Start Footer -->
    <footer class="d-flex justify-content-center align-items-center">
        <p class="m-0 d-flex justify-content-center">
            جميع الحقوق محفوظة لجامعة الملك فيصل 2024 © | تصميم وتطوير عمادة التعلم الإلكتروني وتقنية المعلومات
        </p>
    </footer><!-- End Footer -->

</body>
</html>
