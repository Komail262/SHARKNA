@model SHARKNA.ViewModels.BoardMembersViewModel

<h2>تفاصيل الطلب</h2>

<script>
    @{
        if (@ViewData["Successful"] != null)
        {
            <Text>
                var result = '@Html.Raw(ViewData["Successful"])';
                Swal.fire(result, '', 'success')
                .then(
                    function () {
                        window.location.href = '@Url.Action("Members", "BoardMembers")';
                    }
                );
            </Text>
        }
        else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] == null)
        {
            <Text>
                var result = '@Html.Raw(ViewData["Falied"])';
                Swal.fire(result, '', 'error');
            </Text>
        }
        else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] != null)
        {
            <Text>
                var result = '@Html.Raw(ViewData["Falied"])';
                Swal.fire(result, '', 'error');
            </Text>
        }
    }
</script>

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">تفاصيل الطلب</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Details" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="BoardRoleName" class="mb-1">العضوية</label>
                                        <select id="BoardRoleName" class="form-control" asp-for="BoardRoleId" asp-items="ViewBag.BoardRoleOfList">
                                            <option value="">اختيار العضوية...</option>
                                        </select>
                               @* 
                                         <select asp-for="BoardRoleId" class="form-control" asp-items="@ViewBag.BoardRoleOfList">
                                            <option value="">اختيار العضوية...</option>
                                         </select>
                                    <span asp-validation-for="BoardRoleId" class="text-danger"></span> *@
                                    </div>
                                </div>
                              
                                    <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                               

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
