@model IEnumerable<SHARKNA.ViewModels.EventViewModel>

@{
    ViewData["Title"] = "Events List";
}

<script>
    @{
        if (@ViewData["Successful"] != null)
        {
            <text>
                                        var result = '@Html.Raw(ViewData["Successful"])';
            Swal.fire(result, '', 'success')
                .then(function () {
                    window.location.href = '@Url.Action("Index", "Events")';
                });
            </text>
        }
        else if (@ViewData["Falied"] != null)
        {
            <text>
                                        var result = '@Html.Raw(ViewData["Falied"])';
            Swal.fire(result, '', 'error');
            </text>
        }
    }
</script>

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-3">
                <h5 class="m-0">إدارة الفعاليات</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search" placeholder="البحث السريع ...">
                    </div>
                    <div>
                        <a asp-action="Create" class="btn btn-primary">إضافة الحدث</a>
                    </div>
                </div>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.EventTitleAr)</th>
                            <th>@Html.DisplayNameFor(m => m.EventTitleEn)</th>
                            <th>@Html.DisplayNameFor(m => m.EventStartDate)</th>
                            <th>وقت بداية الحدث</th>
                            <th>@Html.DisplayNameFor(m => m.EventEndtDate)</th>
                            <th>وقت نهاية الحدث</th>
                            <th>@Html.DisplayNameFor(m => m.SpeakersAr)</th>
                            <th>@Html.DisplayNameFor(m => m.SpeakersEn)</th>
                            <th>@Html.DisplayNameFor(m => m.TopicAr)</th>
                            <th>@Html.DisplayNameFor(m => m.TopicEn)</th>
                            <th>@Html.DisplayNameFor(m => m.DescriptionAr)</th>
                            <th>@Html.DisplayNameFor(m => m.DescriptionEn)</th>
                            <th>@Html.DisplayNameFor(m => m.LocationAr)</th>
                            <th>@Html.DisplayNameFor(m => m.LocationEn)</th>
                            <th>@Html.DisplayNameFor(m => m.MaxAttendence)</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Event in Model)
                        {
                            <tr>
                                <td>@Event.EventTitleAr</td>
                                <td>@Event.EventTitleEn</td>
                                <td>@Event.EventStartDate.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>@Event.EventStartDate.ToString("HH:mm")</td>
                                <td>@Event.EventEndtDate.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>@Event.EventEndtDate.ToString("HH:mm")</td>
                                <td>@Event.SpeakersAr</td>
                                <td>@Event.SpeakersEn</td>
                                <td>@Event.TopicAr</td>
                                <td>@Event.TopicEn</td>
                                <td>@Event.DescriptionAr</td>
                                <td>@Event.DescriptionEn</td>
                                <td>@Event.LocationAr</td>
                                <td>@Event.LocationEn</td>
                                <td>@Event.MaxAttendence</td>
                                <td class="action_td text-end">
                                    <div class="d-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@Event.Id" class="btn btn-sm btn-success">تعديل</a>
                                        <form asp-action="Delete" asp-route-id="@Event.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger" onclick="return functionConfirm(this)">حذف</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Index">Back to List</a>
</div>
