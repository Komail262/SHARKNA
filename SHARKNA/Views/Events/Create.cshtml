                                </div><!-- END ITEM -->

                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="Time" class="mb-1">بداية الساعة الحدث</label>
                                        <input asp-for="Time" type="time" placeholder="الساعة " class="form-control">
                                        <span asp-validation-for="Time" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->

