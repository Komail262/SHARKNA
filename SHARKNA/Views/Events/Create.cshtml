                                        <span asp-validation-for="TopicEn" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->

                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="DescriptionAr" class="mb-1">وصف الحدث بالعربي</label>
