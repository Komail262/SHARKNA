                                        <input asp-for="DescriptionEn" type="text" placeholder="وصف الحدث بالانجليزي" class="form-control">
                                        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->

                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="LocationAr" class="mb-1">موقع الحدث بالعربي</label>
                                        <input asp-for="LocationAr" type="text" placeholder="موقع الحدث بالعربي" class="form-control">
                                        <span asp-validation-for="LocationAr" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->

                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="LocationEn" class="mb-1">موقع الحدث بالانجليزي</label>
                                        <input asp-for="LocationEn" type="text" placeholder="موقع الحدث بالانجليزي" class="form-control">
                                        <span asp-validation-for="LocationEn" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->

                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="MaxAttendence" class="mb-1">الحد الأقصى للحضور</label>
                                        <input asp-for="MaxAttendence" type="number" placeholder="الحد الأقصى للحضور" class="form-control">
                                        <span asp-validation-for="MaxAttendence" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" value="Create" class="btn btn-primary px-5" title="save">حفظ</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Page Wrap -->
