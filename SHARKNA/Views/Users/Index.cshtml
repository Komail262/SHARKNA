@model IEnumerable<SHARKNA.Models.tblUsers>

@{
    ViewData["Title"] = "Users List";
}

<h2>Users List</h2>

<div>
    <a asp-action="Create" class="btn btn-primary">Add User</a>
</div>

@if (Model == null || !Model.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Mobile Number</th>
                <th>Full Name (AR)</th>
                <th>Full Name (EN)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.MobileNumber</td>
                    <td>@user.FullNameAr</td>
                    <td>@user.FullNameEn</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
