@model SHARKNA.ViewModels.UserLoginViewModel

@{
    ViewData["Title"] = "Login";
}
<script>
    @{
        if (@ViewData["Successful"] != null)
        {
            <text>
                            var result = '@Html.Raw(ViewData["Successful"])';
            Swal.fire(result, '', 'success')
                .then(function () {
                    window.location.href = '@Url.Action("Index", "Home")';
                }); 
            </text>
        }
        else if (@ViewData["Failed"] != null)
        {
            <text>
                            var result = '@Html.Raw(ViewData["Failed"])';
            Swal.fire(result, '', 'error')
                .then(function () {
                    window.location.href = '@Url.Action("Login", "Users")';
                });
            </text>
        }
    }
</script>
<h2>تسجيل الدخول</h2>

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">تسجيل الدخول</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                       

                        <form asp-action="Login" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="Email" class="mb-1">البريد الإلكتروني</label>
                                        <input asp-for="Email" type="email" placeholder="البريد الإلكتروني" class="form-control text-start" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="Password" class="mb-1">كلمة السر</label>
                                        <input asp-for="Password" type="password" placeholder="********" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-5" onclick="return funcation()" title="Login">تسجيل الدخول</button>
                               
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div>
    <a href="javascript:window.history.back();">Back</a>
</div>
