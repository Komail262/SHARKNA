@model UserLoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - لوحة التحكم بالنظام</title>

    <link rel="stylesheet" href="~/Assets/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/Assets/css/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/Assets/css/root.css">
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>

    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-container {
            position: relative;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            max-width: 400px;
            width: 100%;
        }

        .background-square {
            position: absolute;
            top: -20px;
            left: -20px;
            width: 80%;
            height: 80%;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 15px;
            transform: rotate(15deg);
            z-index: -1;
        }
    </style>
</head>
<body>
    <div class="form-container text-center">
        <div class="background-square"></div>
        <h4 class="mb-4" style="font-size: 1.75rem; font-weight: 600;">تسجيل الدخول</h4>
        <p id="Error" class="text-danger mb-3" style="font-size: 1.1rem;">
            @ViewData["Login_error"]
        </p>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="UserName" style="font-size: 1rem; font-weight: 500;"></label>
                <input asp-for="UserName" class="form-control rounded-pill" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" style="font-size: 1rem; font-weight: 500;"></label>
                <input asp-for="Password" class="form-control rounded-pill" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary glow w-100 mt-4 rounded-pill" style="font-size: 1.1rem;">
                تسجيل الدخول <i class="bx bx-right-arrow-alt ml-1"></i>
            </button>
            <div class="text-center mt-3">
                <a href="#" class="card-link" style="font-size: 1rem; font-weight: 500;">
                    هل نسيت كلمة المرور؟
                </a>
            </div>
        </form>
    </div>
</body>
</html>
