@model IEnumerable<BoardRolesViewModel>

@{
    ViewData["Title"] = "BoardRoles List";
}

<script>
    @{
        if (ViewData["Successful"] != null)
        {
            <text>
                            var result = '@Html.Raw(ViewData["Successful"])';
            Swal.fire(result, '', 'success')
                .then(
                    function () {
                        window.location.href = '@Url.Action("Index", "BoardRoles")';
                    }
                );
            </text>
        }
        else if (ViewData["Failed"] != null && ViewData["NoRedirect"] == null)
        {
            <text>
                            var result = '@Html.Raw(ViewData["Failed"])';
            Swal.fire(result, '', 'error');
            </text>
        }
        else if (ViewData["Failed"] != null && ViewData["NoRedirect"] != null)
        {
            <text>
                            var result = '@Html.Raw(ViewData["Failed"])';
            Swal.fire(result, '', 'error');
            </text>
        }
    }
</script>

<!DOCTYPE html>
<html lang="ar" dir="rtl" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <!-- Start Page Wrap -->
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <div class="block-header border-bottom px-4 py-3">
                    <h5 class="m-0">إدارة أدوار مجلس الإدارة</h5>
                    <div class="d-flex gap-2">
                        <div class="form-group">
                            <input type="text" class="form-control table__quick_search" placeholder="البحث السريع ...">
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">إضافة أدوار مجلس الإدارة</a>
                        </div>
                    </div>
                </div>
                <div class="block-body">
                    <table class="table table-hover js-dataTable">
                        <thead>
                            <tr>
@*                               <th>@Html.DisplayNameFor(model => model.First().NameEn)</th>
 *@                              <th>@Html.DisplayNameFor(model => model.NameEn)</th>
                              <th>@Html.DisplayNameFor(model => model.NameAr)</th>
@*                               <th>@Html.DisplayNameFor(model => model.First().NameAr)</th>
 *@                              <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var boardRoles in Model)
                            {
                                <tr>
                                    <td>@boardRoles.NameEn</td>
                                    <td>@boardRoles.NameAr</td>
                                    <td class="action_td text-end">
                                        <div class="d-flex gap-2">
                                            <a asp-action="Edit" asp-route-id="@boardRoles.Id" class="btn btn-sm btn-success">تعديل</a>
                                            <form asp-action="Delete" asp-route-id="@boardRoles.Id" method="post" style="display:inline;">
                                               <button type="submit" class="btn btn-danger" onclick="return functionConfirm(this)">حذف</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section><!-- End Page Wrap -->
    <!-- Start Footer -->
    <footer class="d-flex justify-content-center align-items-center">
        <p class="m-0 d-flex justify-content-center">
            جميع الحقوق محفوظة لجامعة الملك فيصل 2024 © | تصميم وتطوير عمادة التعلم الإلكتروني وتقنية المعلومات
        </p>
    </footer><!-- End Footer -->
</body>
</html>
