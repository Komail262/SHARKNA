@model SHARKNA.ViewModels.BoardRolesViewModel

@{
    ViewData["Title"] = "Create boardRoles";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<body>
    
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <div class="block-header border-bottom px-4 py-4">
                    <h5 class="m-0">إضافة أدوار مجلس الإدارة</h5>
                </div>
                <div class="block-body py-5">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <form asp-action="Create" method="post">
                                <div class="row">
                                    <!-- START ITEM -->
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label for="NameAr" class="mb-1">الاسم بالعربي</label>
                                            <input asp-for="NameAr" type="text" placeholder="الاسم بالعربي" class="form-control">
                                            <span asp-validation-for="NameAr" class="text-danger"></span>
                                        </div>
                                    </div><!-- END ITEM -->

                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label for="NameEn" class="mb-1">الاسم بالانجليزي</label>
                                            <input asp-for="NameEn" type="text" placeholder="الاسم بالانجليزي" class="form-control">
                                            <span asp-validation-for="NameEn" class="text-danger"></span>
                                        </div>
                                    </div><!-- END ITEM -->
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Page Wrap -->
    <div>
        <a asp-action="Index">العودة إلى القائمة</a>
    </div>

</body>
</html>
