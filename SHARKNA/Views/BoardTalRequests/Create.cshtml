@model SHARKNA.ViewModels.BoardTalRequestsViewModel


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    @{
        if (@ViewData["Successful"] != null)
        {
            <Text>
                                                        var result = '@Html.Raw(ViewData["Successful"])';
            Swal.fire(result, '', 'success')
                .then(
                    function () {
                        window.location.href = '@Url.Action("Index", "BoardTalRequests")';
                    }
                );
            </Text>
        }
        else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] == null)
        {
            <Text>
                                                        var result = '@Html.Raw(ViewData["Falied"])';
            Swal.fire(result, '', 'error');
            </Text>
        }
        else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] != null)
        {
            <Text>
                                                        var result = '@Html.Raw(ViewData["Falied"])';
            Swal.fire(result, '', 'error');
            </Text>
        }
    }
</script>
<h2>إضافة طلب</h2>

<section class="page_wrap">
    <div class="page_content">

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة طلب</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Create" method="post">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">@Html.DisplayNameFor(m => m.UserName)</label>
                                        <input asp-for="UserName" type="text" class="form-control" readonly>
                                        <span asp-validation-for="UserName" class="text-danger"></span>

                                    </div>
                                </div>
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <input asp-for="BoardId" type="hidden" />
                                        <label for="" class="mb-1">@Html.DisplayNameFor(m => m.BoardId)</label>
                                        <input asp-for="BoardName" type="text" class="form-control" readonly />
                                        <span asp-validation-for="BoardName" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">@Html.DisplayNameFor(m => m.Email)</label>
                                        <input asp-for="Email" type="email" class="form-control text-start" readonly>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">@Html.DisplayNameFor(m => m.MobileNumber)</label>
                                        <input asp-for="MobileNumber" type="tel" placeholder=" " class="form-control" maxlength="13" readonly>
                                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">@Html.DisplayNameFor(m => m.FullNameAr) </label>
                                        <input asp-for="FullNameAr" type="text" class="form-control" readonly>
                                        <span asp-validation-for="FullNameAr" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1"> المهارات</label>
                                        <input asp-for="Skills" type="text" placeholder="المهارات " class="form-control">
                                        <span asp-validation-for="Skills" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1"> الخبرات</label>
                                        <input asp-for="Experiences" type="text" placeholder="الخبرات " class="form-control">
                                        <span asp-validation-for="Experiences" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="" class="mb-1">@Html.DisplayNameFor(m => m.BoardDescription)</label>
                                        <textarea asp-for="BoardDescription" type="text" class="form-control" readonly></textarea>
                                        <span asp-validation-for="BoardDescription" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class=" d-flex justify-content-center">
                                <a href="@Url.Action("UserDetails", "BoardTalRequests")" class="btn btn-secondary col-3 mx-2">العودة</a>
                                <button type="submit" value="Create" class="btn btn-primary col-3 mx-2" title="save">تسجيل</button>
                            </div>

                        </form>


                    </div>
                </div>
            </div>
        </div>



    </div>
</section><!-- End Page Wrap -->