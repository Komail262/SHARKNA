@model IEnumerable<BoardRequestsViewModel>

@{
    ViewData["Title"] = "Board Requests List";
}

<!DOCTYPE html>
<html lang="en" dir="rtl" data-theme="light">
<body>
    <!-- Start Page Wrap -->
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <div class="block-header border-bottom px-4 py-3">
                    <h5 class="m-0"> طلبات الاندية</h5>
                    <div class="d-flex gap-2">
                        <div class="form-group">
                            <input type="text" class="form-control table__quick_search" placeholder="البحث السريع ...">
                        </div>
                        <div>
                            <a asp-action="UserDetails" class="btn btn-primary">الاندية </a>
                        </div>
                    </div>
                </div>
                <div class="block-body">
                    <table class="table table-hover js-dataTable">
                        <thead>
                            <tr >
                                <th>@Html.DisplayNameFor(m => m.FullNameAr)</th>
                                <th>@Html.DisplayNameFor(m => m.BoardId)</th>
                                <th>@Html.DisplayNameFor(m => m.RequestStatusId)</th>
                                <th>الإجراءات</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.FullNameAr</td>
                                    <td>@user.BoardName</td>
                                    <td>
                                        <span style="@(user.RequestStatusName == "مقبول" ? "background-color: lightgreen; padding: 2px 6px; border: 1px solid green; display: inline-block; border-radius: 5px;" :
                                                      user.RequestStatusName == "مرفوض" ? "background-color: lightcoral; padding: 2px 6px; border: 1px solid red; display: inline-block; border-radius: 5px;" :
                                                      user.RequestStatusName == "تحت الدراسة" ? "background-color: gold; padding: 2px 6px; border: 1px solid goldenrod; display: inline-block; border-radius: 5px;":
                                                      user.RequestStatusName == "تم الالغاء" ? "background-color: gray; padding: 2px 6px; border: 1px solid black; display: inline-block; border-radius: 5px;" : "")">
                                            @user.RequestStatusName
                                        </span>
                                    </td>
                                    <td>


                                        @if (@user.RequestStatusId == Guid.Parse("93d729fa-e7fa-4ea6-bb16-038454f8c5c2"))
                                        {
                                            <form asp-action="CancelRequest" method="post">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="btn" style="background-color: rgb(200, 12, 12); color: white;">إلغاء الطلب</button>
                                            </form>

                                        }
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
  

</body>
</html>
