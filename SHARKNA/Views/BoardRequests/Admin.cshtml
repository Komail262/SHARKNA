    @model IEnumerable<BoardRequestsViewModel>

<!DOCTYPE html>
<html lang="en" dir="rtl" data-theme="light">
<body>
    <!-- Start Page Wrap -->
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <div class="block-header border-bottom px-4 py-3">
                    <h5 class="m-0">ادارة طلبات الاندية</h5>
                    <div class="d-flex gap-2">
                        <div class="form-group">
                            <input type="text" class="form-control table__quick_search" placeholder="البحث السريع ...">
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">التسجيل في نادي </a>
                        </div>
                    </div>
                </div>
                <div class="block-body">
                    <table class="table table-hover js-dataTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.FullNameAr)</th>
                                <th>@Html.DisplayNameFor(m => m.BoardId)</th>
                                <th>@Html.DisplayNameFor(m => m.RequestStatusId)</th>
                                <th>@Html.DisplayNameFor(m => m.RejectionReasons)</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td>@request.FullNameAr</td>
                                    <td>@request.BoardName</td>
                                    <td>@request.RequestStatusName</td>
                                    <td>@request.RejectionReasons</td>
                                    <td >
                                        <form asp-action="Details">
                                            <input type="hidden" name="id" value="@request.Id" />
                                            <button type="submit" class="btn" style="background-color: rgb(15, 113, 121); color: white;">تفاصيل الطلب</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section><!-- End Page Wrap -->
 </body>
 </html>