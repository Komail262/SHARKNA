@model IEnumerable<SHARKNA.ViewModels.EventRequestViewModel>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    @if (TempData["Success"] != null)
    {
        <text>
            Swal.fire('نجاح', '@TempData["Success"]', 'success');
        </text>
    }
    else if (TempData["Error"] != null)
    {
        <text>
            Swal.fire('خطأ', '@TempData["Error"]', 'error');
        </text>
    }
</script>

@{
    ViewData["Title"] = "Event Requests List";
}

<h2>قائمة طلبات الفعاليات</h2>

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">طلبات الفعاليات</h5>
                <div class="d-flex gap-2">
                    <div class="form-group">
                        <input type="text" class="form-control table__quick_search" placeholder="البحث السريع ...">
                    </div>
                    <div>
                        <a asp-action="Create" class="btn btn-primary">إضافة طلب</a>
                    </div>
                </div>
            </div>
            <div class="block-body">
                <table class="table table-hover js-dataTable">
                    <thead>
                        <tr>
                            <th>الفعالية</th>
                            <th>اللجنة</th>
                            <th>حالة الطلب</th>
                            <th>أسباب الرفض</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.EventName</td>
                                <td>@request.BoardName</td>
                                <td>@request.RequestStatusName</td>
                                <td>
                                    @if (request.RequestStatusName == "مرفوض")
                                    {
                                        @request.RejectionReasons
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-primary btn-sm details-btn">عرض التفاصيل</a>
                                        @if (request.RequestStatusName != "تم الإلغاء")
                                        {
                                            <form asp-action="Cancel" method="post" style="margin: 0;">
                                                <input type="hidden" name="id" value="@request.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">إلغاء الطلب</button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<style>
    .btn-group {
        display: flex;
        gap: 0.5rem; /* Adjust gap between buttons */
    }

    .details-btn {
        /* Default width for details button */
    }

    .btn-group form {
        margin: 0;
    }

    /* Style for details button when it's the only button in the group */
    .btn-group:only-child .details-btn {
        width: 100%; /* Full width when only button */
    }
</style>
