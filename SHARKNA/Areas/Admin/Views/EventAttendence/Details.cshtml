@model IEnumerable<EEventAttendenceViewModel>

@{
    ViewData["Title"] = "Event Attendance Details";
}

<!DOCTYPE html>
<html lang="en" dir="rtl" data-theme="light">
<body>
    <!-- Start Page Wrap -->
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <div class="block-header border-bottom px-4 py-3">
                    <h5 class="m-0">تفاصيل الحضور</h5>
                    <div class="d-flex gap-2">
                        <div class="form-group">
                            <input type="text" class="form-control table__quick_search" placeholder="البحث السريع ...">
                        </div>
                    </div>
                </div>
                <div class="block-body">
                    <table class="table table-hover js-dataTable">
                        <thead>
                            <tr>
                                <th>@(Model.Any() ? Model.First().EventName : "N/A")</th>
                                @*                                 <th>@Html.DisplayNameFor(m => m.First().EventName)</th>
                                *@
                                <th>يوم</th> <!-- Updated to show the day number -->
                                <th>@Html.DisplayNameFor(m => m.First().EventDate)</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendence in Model)
                            {
                                <tr>
                                    <td>@attendence.EventName</td>
                                    <td>يوم @attendence.Day</td> <!-- Display the day number -->
                                    <td>@attendence.EventDate.ToString("dd/MM/yyyy HH:mm")</td> <!-- Fixed time format -->
                                    <td>
                                        <a asp-action="Members" asp-route-id="@attendence.EventsId" asp-route-day="@attendence.Day" class="btn btn-primary"> التحضير </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section><!-- End Page Wrap -->
</body>
</html>
