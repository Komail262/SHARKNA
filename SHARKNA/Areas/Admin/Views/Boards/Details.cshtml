@model SHARKNA.ViewModels.BoardViewModel

@{
    ViewData["Title"] = "تفاصيل اللجنة";
}

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">تفاصيل الطلب</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">


                        <form>
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="NameAr" class="mb-1">اسم اللجنة بالعربي</label>
                                        <input type="text" id="NameAr" class="form-control" value="@Model.NameAr" disabled />
                                    </div>
                                </div>
                                <!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="NameEn" class="mb-1">اسم اللجنة بالإنجليزي</label>
                                        <input type="text" id="NameEn" class="form-control" value="@Model.NameEn" disabled />
                                    </div>
                                </div>
                                <!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="DescriptionAr" class="mb-1">الوصف بالعربي</label>
                                        <input type="text" id="DescriptionAr" class="form-control" value="@Model.DescriptionAr" disabled />
                                    </div>
                                </div>
                                <!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="DescriptionEn" class="mb-1">الوصف بالإنجليزي</label>
                                        <input type="text" id="DescriptionEn" class="form-control" value="@Model.DescriptionEn" disabled />
                                    </div>
                                </div>
                                <!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label for="Gender" class="mb-1">الجنس</label>
                                        <input type="text" id="Gender" class="form-control" value="@(Model.Gender == true ? "ذكر" : "أنثى")" disabled />
                                    </div>
                                </div>
                                <!-- END ITEM -->

                            </div>

                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <a asp-action="Index" class="btn btn-secondary">العودة إلى القائمة</a>

                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>