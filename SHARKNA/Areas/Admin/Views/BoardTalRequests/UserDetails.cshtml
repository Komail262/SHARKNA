@model IEnumerable<BoardViewModel>

<script>
    @{
        if (@ViewData["Successful"] != null)
        {
            <Text>
                                                                                            var result = '@Html.Raw(ViewData["Successful"])';
            Swal.fire(result, '', 'success')
                .then(
                    function () {
                        window.location.href = '@Url.Action("Index", "BoardRequests")';
                    }
                );
            </Text>
        }
        else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] == null)
        {
            <Text>
                                                                                            var result = '@Html.Raw(ViewData["Falied"])';
            Swal.fire(result, '', 'error');
            </Text>
        }
        else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] != null)
        {
            <Text>
                                                                                            var result = '@Html.Raw(ViewData["Falied"])';
            Swal.fire(result, '', 'error');
            </Text>
        }
    }
</script>


<section class="page_wrap">
    <div class="page_content">

        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h4 class="m-0">التسجيل في نادي</h4>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="row">
                            @foreach (var Item in Model)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h5 class="card-title">@Item.NameAr</h5>
                                        </div>
                                        <div class="card-footer">

                                            <form asp-action="Create" method="get">
                                                <input type="hidden" name="BoardId" value="@Item.Id" />
                                                <button type="submit" class="btn btn-primary w-100">التفاصيل </button>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>


                    </div>
                </div>
            </div>
        </div>



    </div>
</section>